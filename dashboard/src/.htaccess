<IfModule mod_rewrite.c>
  RewriteEngine On

  # Serve existing files/directories as-is
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Angular SPA fallback
  RewriteRule ^ index.html [L]
</IfModule>


# Cache control
<IfModule mod_headers.c>
  # Always fetch latest app shell / HTML
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Never cache JSON
  <FilesMatch "\.(json)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Cache-busted bundles (hashed filenames)
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Other static assets - revalidate after deploys
  <FilesMatch "\.(ico|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=0, must-revalidate"
  </FilesMatch>
</IfModule>

